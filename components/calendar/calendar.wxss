.calendar {
    overflow: hidden;
    height: 100%;
    background: #fff;
}

.calendar .tip {
    padding-left: 66rpx;
    line-height: 70rpx;
    height: 70rpx;
    overflow: hidden;
    font-size: 24rpx;
    background-color: #ffe8a1;
    position: relative;
    color: #9a7126;
}

.calendar .msg-icon {
    position: absolute;
    left: 20rpx;
    top: 50%;
    margin-top: -16rpx;
    line-height: 30rpx;
    height: 30rpx;
}

.calendar .week-title {
    background: #556a72;
    color: #fff;
    -webkit-box-pack: center;
    justify-content: center;
    width: 100%;
    height: 56rpx;
}

.calendar .calendar-scroll {
    overflow: auto;
    padding-bottom: 60rpx;
    -webkit-overflow-scrolling: touch;
}

.calendar .week {
    font-size: 31rpx;
}

.calendar .month-title {
    font-size: 34rpx;
    color: #000;
    font-weight: 700;
    padding: 30rpx 0 20rpx;
}

.calendar .month-days {
    width: 100%;
    font-size: 31rpx;
    color: #333;
}

.calendar .month-days .grid {
    width: 14.285%;
    box-sizing: border-box;
    padding: 0 16rpx 16rpx;
    overflow: hidden;
}

.calendar .month-days .day {
    border-radius: 12rpx;
}

.calendar .month-days .day .jia,.calendar .month-days .day .recent {
    margin-top: 4rpx;
    font-size: 20rpx;
    height: 20rpx;
    line-height: 1;
    color: #999;
    margin-bottom: 4rpx;
}

.calendar .month-days .color {
    color: #3c6;
}

.calendar .month-days .day.active {
    background-color: #09bb07!important;
    font-size: 28rpx;
    color: #fff;
    padding-bottom: 5rpx;
}

.calendar .month-days .day.active .color,.calendar .month-days .day.active .jia,.calendar .month-days .day.active .recent {
    color: #fff;
}

.calendar .month-days .day.today {
    background-color: #e7e7e7;
    border-radius: 4rpx;
    font-size: 28rpx;
    padding-bottom: 5rpx;
}

.calendar .month-days .day.disabled .jia,.calendar .month-days .day.disabled .num,.calendar .month-days .day.disabled .recent {
    color: #ccc!important;
}

.flex_box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.flex_box.flex_column {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    flex-direction: column;
}

.flex_box.flex_wrap {
    flex-wrap: wrap;
}

.flex_align_center {
    -webkit-box-align: center;
    align-items: center;
}

.flex_justify_center {
    -webkit-box-pack: center;
    justify-content: center;
}

.flex_1 {
    box-flex: 1;
    flex: 1;
}

.flex_2 {
    box-flex: 2;
    flex: 2;
}

.flex_3 {
    box-flex: 3;
    flex: 3;
}

.l {
    text-align: left;
}

.c {
    text-align: center;
}

.r {
    text-align: right;
}