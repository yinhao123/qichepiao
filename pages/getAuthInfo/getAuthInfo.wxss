page {
    background: #fff;
    height: 100vh;
}

.page {
    padding: 80rpx 70rpx;
    position: relative;
}

.logo {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: auto;
    display: block;
}

button {
    width: 60%;
    line-height: 88rpx;
    background: #09bb07;
    border-radius: 10rpx;
    color: #fff;
    font-size: 36rpx;
    margin: 70rpx auto;
}

.btn-hover {
    background: #09aa07;
}

.appname {
    text-align: center;
    color: #333;
    font-size: 40rpx;
    margin: 40rpx auto 80rpx;
    line-height: 1;
}

.desc {
    font-size: 28rpx;
    color: #888;
    line-height: 1.5;
}

.logo-bottom {
    width: 268rpx;
    height: 90rpx;
    position: absolute;
    left: 241rpx;
    bottom: 70rpx;
}