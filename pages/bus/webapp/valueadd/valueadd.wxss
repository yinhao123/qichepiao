@font-face {
    font-family: iconfont;
    src: url(//css.40017.cn/cn/train/mobileqq/20160421/iconfont/iconfont.eot);
    src: url(//css.40017.cn/cn/train/mobileqq/20160421/iconfont/iconfont.eot?) format("embedded-opentype"),url(//css.40017.cn/cn/train/mobileqq/20160421/iconfont/iconfont.ttf) format("truetype"),url(//css.40017.cn/cn/train/mobileqq/20160421/iconfont/iconfont.svg) format("svg");
}

.item {
    position: relative;
    padding: 10px 15px;
    border-bottom: 1px solid #eee;
    background-color: #fff;
    padding-right: 40px;
}

.chose {
    position: absolute;
    top: 50%;
    right: 15px;
    width: 40px;
    height: 40px;
    margin-top: -20px;
    line-height: 40px;
    text-align: right;
}

.chose::after {
    content: '\e639';
    font-family: iconfont!important;
    font-size: 24px;
    color: #ccc;
}

.select {
    background-color: #e9e9e9;
}

.select .chose::after {
    content: '\e638';
    color: #2ebd59;
}

.subtitle {
    margin-bottom: 10px;
}

.paragraph {
    font-size: 12px;
    color: #999;
    line-height: 20px;
}

.text-icon {
    padding: 0 10px 0 6px;
}

.text-icon::after {
    content: '\e61d';
    font-family: iconfont!important;
    font-size: 18px;
    color: #bebebe;
}

.valueadd-layer {
    position: fixed;
    width: 100%;
    height: 100%;
    padding: 24px;
    top: 0;
    left: 0;
    background: #404040;
    color: #fff;
    box-sizing: border-box;
    z-index: 900;
    overflow-y: scroll;
}

.title {
    margin-top: 0;
    line-height: 1;
    font-size: 20px;
    text-align: center;
}

.valueadd-explain {
    padding-top: 12px;
    font-size: 14px;
    color: #fff;
    line-height: 22px;
    text-align: justify;
    word-break: break-all;
}

.valueadd-explain:nth-last-child(2) {
    margin-bottom: 56px;
}

.layer-close {
    width: 100%;
    height: 136px;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 1011;
    background: -webkit-linear-gradient(top,rgba(64,64,64,0) 0,#404040 60%,#404040 100%);
}

.layer-close:before {
    content: '';
    position: absolute;
    left: 50%;
    bottom: 15px;
    width: 28px;
    height: 28px;
    margin-left: -25px;
    border-top: 1px solid #fff;
    transform: rotate(45deg);
}

.layer-close:after {
    content: '';
    position: absolute;
    left: 50%;
    bottom: 35px;
    width: 28px;
    height: 28px;
    margin-left: -25px;
    border-bottom: 1px solid #fff;
    transform: rotate(-45deg);
}