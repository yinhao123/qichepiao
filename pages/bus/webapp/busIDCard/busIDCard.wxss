.flex-box {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

.flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex2 {
    -webkit-box-flex: 2;
    flex: 2;
}

.idcard-content {
    padding: 19rpx 20rpx;
}

.idcard-content .photo-box {
    width: 710rpx;
    height: 160rpx;
    margin-bottom: 20rpx;
    padding-top: 26rpx;
}

.idcard-content .img-box {
    text-align: center;
}

.idcard-content .icon {
    display: inline-block;
    width: 65rpx;
    height: 65rpx;
}

.idcard-content .icon-camera {
    background: url(https://file.40017.cn/groundtraffic/bus/weixin/busidcard/camera.png) no-repeat;
    background-size: 100%;
}

.idcard-content .txt-box {
    font-size: 26rpx;
    text-align: center;
    margin-top: 5rpx;
}

.idcard-content .txt-tip {
    color: #999;
    margin-right: 17rpx;
}

.idcard-content .txt-demo {
    color: #02a1f0;
}

.idcard-content .input-box {
    height: 300rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    font-size: 32rpx;
}

.idcard-content .input-item {
    border-bottom: 1px solid rgba(233,233,233,.5);
    height: 100rpx;
    line-height: 100rpx;
}

.idcard-content .left-name {
    width: 180rpx;
    display: block;
    color: #666;
    font-size: 32rpx;
}

.idcard-content .picker {
    color: #333;
    position: relative;
    height: 100%;
    font-size: 32rpx;
}

.idcard-content .picker:after {
    content: '';
    position: absolute;
    right: 2%;
    top: 40%;
    display: inline-block;
    width: 15rpx;
    height: 15rpx;
    border: #ccc solid;
    border-width: 1px 1px 0 0;
    transform: rotate(135deg);
    transform-origin: 50% 50%;
}

.idcard-content input {
    height: 100%;
    color: #333;
}

.placeholder {
    color: #ccc;
}

.idcard-content .input-box,.idcard-content .photo-box {
    background-color: #fff;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.1);
    border-radius: 10rpx;
}

.idcard-content .tip {
    color: #999;
    font-size: 26rpx;
    text-align: center;
    margin: 50rpx 0 55rpx 0;
}

.idcard-content .btn-box>button {
    width: 560rpx;
    height: 96rpx;
    margin: 0 auto;
    background-color: #00bb07;
    color: #fff;
    border-radius: 50rpx;
    box-shadow: 0 4rpx 10rpx 0rpx rgba(0,187,7,.4);
}

.tip-box {
    padding: 22rpx 20rpx 36rpx 20rpx;
    background-color: #fbfcfd;
    border-radius: 16rpx;
    margin-top: 60rpx;
    box-shadow: 0 0 10rpx 0 rgba(0,0,0,.1);
}

.tip-title {
    text-align: center;
    color: #666;
    font-size: 30rpx;
    margin-bottom: 22rpx;
}

.tip-p {
    font-size: 24rpx;
    color: #999;
    line-height: 34rpx;
}

.tip-color {
    color: #ff6815;
}

.dialog-box {
    position: fixed;
    background-color: rgba(0,0,0,.5);
    z-index: 99;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.dialog-content {
    width: 544rpx;
    height: auto;
    padding: 42rpx 50rpx 45rpx 50rpx;
    background: #fff;
    border-radius: 20rpx;
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 100;
    text-align: center;
}

.demo-title {
    color: #333;
    font-size: 32rpx;
    margin-bottom: 40rpx;
}

.img-demo {
    width: 525rpx;
    height: 271rpx;
}

.demo-tip {
    color: #999;
    font-size: 24rpx;
    margin: 40rpx 0;
    text-align: justify;
}

.dialog-box .btn-box>button {
    border-radius: 80rpx;
}